<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false">
    <testsuites>
        <testsuite name="Bowling">
            <directory suffix=".php">./tests/Bowling</directory>
        </testsuite>
        <testsuite name="Life">
            <directory suffix=".php">./tests/Life</directory>
        </testsuite>
        <testsuite name="PrimeFactors">
            <directory suffix=".php">./tests/PrimeFactors</directory>
        </testsuite>
        <testsuite name="RomanNumerals">
            <directory suffix=".php">./tests/RomanNumerals</directory>
        </testsuite>
        <testsuite name="CurrencyConversion">
            <directory suffix=".php">./tests/CurrencyConversion</directory>
        </testsuite>
    </testsuites>
    <listeners>
        <listener class="\Mockery\Adapter\Phpunit\TestListener"
                  file="vendor/mockery/mockery/library/Mockery/Adapter/Phpunit/TestListener.php">
        </listener>
    </listeners>
</phpunit>
